<div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8">
        <form role="form" class="contact__form" action="/comment" method="post">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row ">
                        <div class="col-sm-4">
                            <input type="email" name="email" class="form-control" id="email" placeholder="电子邮件">
                        </div>
                        <div class="col-sm-4">
                            <input type="text" name="name" class="form-control" id="name" placeholder="昵称">
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="message" class="sr-only">评论</label>
                        <textarea name="message" class="form-control" rows="9" id="message" placeholder="评论"></textarea>
                    </div>
                </div>

            </div> <!-- / .row -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    提 &nbsp;&nbsp;&nbsp;交
                </button>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
</div> <!-- / .row -->