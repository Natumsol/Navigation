<div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8">
        <form role="form" class="contact__form" action="/comment" method="post">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row ">
                        <div class="col-sm-4">
                            <% if(user){ %>
                            <input type="email" name="email" readonly class="form-control" id="email" placeholder="电子邮件"
                                   value="<%= user.email %>">
                            <% }else{ %>
                            <input type="email" name="email" class="form-control" id="email" placeholder="电子邮件">
                            <% } %>
                        </div>
                        <div class="col-sm-4">
                            <% if(user){ %>
                            <input type="text" name="name" readonly class="form-control" id="name" placeholder="昵称"
                                   value="<%= user.username %>">
                            <% }else{ %>
                            <input type="text" name="name" class="form-control" id="name" placeholder="昵称">
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="message" class="sr-only">评论</label>
                        <textarea name="comment" class="form-control" rows="9" placeholder="评论"></textarea>
                    </div>
                </div>

            </div>
            <!-- / .row -->
            <div class="text-center">
                <button class="btn btn-primary submit-comment">
                    提 &nbsp;&nbsp;&nbsp;交
                </button>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
</div> <!-- / .row -->